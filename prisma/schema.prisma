model Transaction {
  id String @id @default(uuid())

  payerID String

  payee   User   @relation(fields: [payeeID], references: [id])
  payeeID String

  value Float

  isReverse Boolean @default(false)

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
}
